{
  "name": "artificer",
  "version": "0.0.0",
  "scenario": "cinnamon",
  "description": "The Artificer Project, Book 0",
  "main": "main.js",

  "build": {
    "appId": "com.maldrasen.artificer",
    "files": [
      "assets/**/*",
      "client/**/*",
      "data/**/*",
      "engine/**/*",
      "node_modules/**/*",
      "saves/.keep",
      "env.json",
      "package.json",
      "main.js"
    ],
    "asar": false,
    "win": {
      "target": [
        { "target":"portable", "arch":["x64","ia32"]}
      ]
    }
  },

  "scripts": {
    "postinstall": "install-app-deps",
    "dist": "electron-builder",
    "start": "electron . --dev",
    "spec": "mocha spec/**/*-spec.js --test",
    "specv": "mocha spec/**/*-spec.js --test -v",
    "spec-cov": "nyc --reporter=html mocha spec/**/*-spec.js --test -v"
  },

  "repository": "git@github.com:maldrasen/artificer.git",
  "keywords": [
    "Artificer",
    "Maldrasen"
  ],
  "author": "Maldrasen <maldrasen@gmail.com>",
  "license": "CC-BY-NC-SA-4.0",

  "dependencies": {
    "jquery": "^3.5.1",
    "object-hash": "^2.0.3",
    "sequelize": "^6.3.5",
    "sqlite3": "^5.0.0",
    "iterate-object": "1.3.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.8.1",
    "mocha": "^8.1.3",
    "node-sass": "^4.14.1",
    "nyc": "^15.1.0"
  }
}
