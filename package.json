{
  "name": "artificer",
  "version": "0.5.0",
  "description": "Artificer",
  "main": "main.js",
  "build": {
    "appId": "com.maldrasen.artificer",
    "files": [
      "assets/**/*",
      "client/**/*",
      "data/**/*",
      "engine/**/*",
      "node_modules/**/*",
      "log/.keep",
      "saves/.keep",
      "env.json",
      "package.json",
      "main.js"
    ],
    "asar": false,
    "win": {
      "target": [
        { "target":"portable", "arch":["x64","ia32"]}
      ]
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "dist": "electron-builder",
    "start": "electron . --dev",
    "spec": "mocha spec/**/*-spec.js --test",
    "specv": "mocha spec/**/*-spec.js --test -v",
    "spec-cov": "nyc --reporter=html mocha spec/**/*-spec.js --test -v"
  },
  "repository": "git@github.com:maldrasen/artificer.git",
  "keywords": [
    "Horsecocks",
    "Shitting Dicknipples"
  ],
  "author": "Maldrasen <maldrasen@gmail.com>",
  "license": "CC-BY-NC-SA-4.0",

  "//": "Added minimist below to resolve a security flaw. I should be able to remove it eventually once the",
  "//": "dependencies that have it as a dependency update it.",
  "dependencies": {
    "extend": "^3.0.2",
    "iterate-object": "^1.3.3",
    "jquery": "^3.5.0",
    "object-hash": "^2.0.3",
    "sequelize": "^5.21.5",
    "sqlite3": "^4.1.1",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "electron": "^7.1.14",
    "electron-builder": "^21.2.0",
    "mocha": "^6.2.2",
    "node-sass": "^4.13.1",
    "nyc": "^15.0.0"
  }
}
