{
  "name": "artificer",
  "version": "0.1.0",
  "description": "Shitting Dicknipples",
  "main": "main.js",
  "build": {
    "appId": "com.maldrasen.artificer",
    "files": [
      "assets/**/*",
      "client/**/*",
      "data/**/*",
      "engine/**/*",
      "log/**/*",
      "node_modules/**/*",
      "saves/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": [{
        "target": "portable",
        "arch": ["x64","ia32"]
      }]
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron . --debug",
    "spec": "mocha spec/**/*-spec.js",
    "specv": "mocha spec/**/*-spec.js -v",
    "spec-cov": "nyc --reporter=html mocha spec/**/*-spec.js "
  },
  "repository": "git@github.com:maldrasen/artificer.git",
  "keywords": [
    "Horsecocks",
    "Shitting Dicknipples"
  ],
  "author": "Maldrasen <maldrasen@gmail.com>",
  "license": "Creative Commons Attribution-NonCommercial-ShareAlike 4.0 International (CC BY-NC-SA 4.0)",
  "dependencies": {
    "extend": "^3.0.2",
    "iterate-object": "^1.3.3",
    "jquery": "^3.4.1",
    "object-hash": "^2.0.1",
    "sequelize": "^5.21.3",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "electron": "^7.1.7",
    "electron-builder": "^21.2.0",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "node-sass": "^4.13.0",
    "nyc": "^15.0.0"
  }
